{
	"root": true,
	"rules": {
	  "semi": ["error", "always"],
	  "space-infix-ops": ["error", {"int32Hint": false}],
	  "comma-dangle": [
	    "error",
	    "never"
	  ],
	  "quotes": [
	    "error",
	    "single"
	  ]
	},
	"parserOptions": {
        "sourceType": "module",
   		"ecmaVersion": 6
 	},
	"env": {
	  "browser": true,
	  "jasmine": true,
	  "jest": true
	}
}